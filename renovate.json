{
  "npm": {
    "enabled": true,
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "automerge": false
      }
    ]
  },
  "github-actions": {
    "enabled": true,
    "automerge": false
  },
  "docker": {
    "enabled": true,
    "fileMatch": [
      "(^|/)docker-compose\\.ya?ml$"
    ],
    "automerge": false,
    "pinDigests": true,
    "packageRules": [
      {
        "matchPackagePatterns": [
          ".*"
        ],
        "groupName": "docker-compose updates",
        "automerge": false
      }
    ]
  }
}