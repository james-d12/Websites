{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "npm": {
    "enabled": true,
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "minimumReleaseAge": "2 days",
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "automerge": false
      }
    ]
  },
  "github-actions": {
    "enabled": true,
    "automerge": false
  },
  "docker": {
    "enabled": true,
    "fileMatch": [
      "(^|/)docker-compose\\.ya?ml$"
    ],
    "automerge": false,
    "pinDigests": true,
    "packageRules": [
      {
        "minimumReleaseAge": "7 days",
        "matchPackagePatterns": [
          ".*"
        ],
        "groupName": "docker-compose updates",
        "automerge": false
      }
    ]
  }
}