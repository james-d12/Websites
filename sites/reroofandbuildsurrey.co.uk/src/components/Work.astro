---
import {Image} from "astro:assets";
import roofImage1 from "../assets/images/roof/roof-image-01.webp";
import roofImage2 from "../assets/images/roof/roof-image-02.webp";
import roofImage3 from "../assets/images/roof/roof-image-03.webp";
import roofImage4 from "../assets/images/roof/roof-image-04.webp";
import roofImage5 from "../assets/images/roof/roof-image-05.webp";
import roofImage6 from "../assets/images/roof/roof-image-06.webp";
import roofImage7 from "../assets/images/roof/roof-image-07.webp";
import roofImage8 from "../assets/images/roof/roof-image-08.webp";

const images = [
    {src: roofImage1, alt: "Body contouring treatment"},
    {src: roofImage2, alt: "Body contouring treatment"},
    {src: roofImage3, alt: "Body contouring treatment"},
    {src: roofImage4, alt: "Body contouring treatment"},
    {src: roofImage5, alt: "Body contouring treatment"},
    {src: roofImage6, alt: "Body contouring treatment"},
    {src: roofImage7, alt: "Body contouring treatment"},
    {src: roofImage8, alt: "Body contouring treatment"},
];
---
<section id="work" class="px-6 py-20 bg-gray-100">
    <div class="max-w-fit mx-auto">
        <div class="max-w-full mx-auto text-center mb-6">
            <h2 class="text-7xl font-semibold mb-6 text-gray-900">Work</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {images.map(image => (
                        <div class="h-64 overflow-hidden rounded-xl shadow-lg">
                            <Image src={image.src} alt={image.alt} layout="constrained"
                                   class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"/>
                        </div>
                ))}
            </div>
        </div>
    </div>
</section>