---
import {Image} from "astro:assets";

import britishCleaningAward from "../assets/images/awards/british-cleaning-award.png";
import cityAndGuildsLevel2Award from "../assets/images/awards/city-and-guilds-level2.jpg";
import cityAndGuildsAward from "../assets/images/awards/city-and-guilds.png";
import cureItAward from "../assets/images/awards/cure-it.png";
import federationOfMasterBuildersAward from "../assets/images/awards/federation-of-master-builders.png";
import instituteOfRoofingAward from "../assets/images/awards/institute-of-roofing.png";
import instituteOfCarpentersAward from "../assets/images/awards/Institute-of-carpenters.jpg";

const awards = [
    {src: britishCleaningAward, alt: "British Cleaning Award"},
    {src: cityAndGuildsLevel2Award, alt: "City and Guilds Level 2 Award"},
    {src: cityAndGuildsAward, alt: "City and Guilds Award"},
    {src: cureItAward, alt: "Cure It GRP Waterproofing System"},
    {src: federationOfMasterBuildersAward, alt: "Federation of Master Builders Award"},
    {src: instituteOfRoofingAward, alt: "Institute of Roofing Award"},
    {src: instituteOfCarpentersAward, alt: "Institute of Carpenters Award"},
];
---

<section id="awards" class="px-6 py-30 bg-gray-50">
    <div class="max-w-5xl mx-auto space-y-12 text-center">
        <div>
            <h2 class="text-7xl font-extrabold mb-4 text-gray-900">
                Accreditations & Awards
            </h2>
            <p class="text-lg md:text-xl leading-relaxed text-gray-700 max-w-2xl mx-auto">
                We take pride in our workmanship and professional recognition.
                Here are some of our accreditations and awards that highlight our commitment to excellence.
            </p>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-8 place-items-center">
            {awards.map((award) => (
                    <div class="flex flex-col items-center text-center group">
                        <div
                                class="w-32 h-32 bg-white p-3 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 flex items-center justify-center"
                        >
                            <Image
                                    src={award.src}
                                    alt={award.alt}
                                    layout="constrained"
                                    class="object-contain max-h-28 transition duration-300"
                            />
                        </div>
                        <p class="mt-3 text-gray-800 text-sm font-medium">{award.alt}</p>
                    </div>
            ))}
        </div>
    </div>
</section>
