{
  "name": "web-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "libs/*",
    "sites/*"
  ],
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "pnpm -r run build",
    "build:libs": "pnpm --filter shared-ui run build",
    "dev": "pnpm -r run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "astro": "^5.15.3",
    "@astrojs/check": "^0.9.5",
    "@tailwindcss/vite": "^4.1.16",
    "tailwindcss": "^4.1.16"
  }
}
