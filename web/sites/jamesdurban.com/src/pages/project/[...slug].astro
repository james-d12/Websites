---
import {Image} from "astro:assets";
import {type CollectionEntry, getCollection} from "astro:content";
import ProjectLayout from "../../layouts/ProjectLayout.astro";
import ProjectSkillList from "../../components/ProjectSkillList.astro";
import {projectImages} from '../../data/ProjectImages';

interface Props {
    entry: CollectionEntry<"project">;
}

// This is a dynamic route that generates a page for every Markdown file in src/content/
// Read more about dynamic routes and this `getStaticPaths` function in the Astro docs:
// https://docs.astro.build/en/core-concepts/routing/#dynamic-routes
export async function getStaticPaths() {
    const project = await getCollection("project");
    return project.map((entry) => ({
        params: {slug: entry.slug},
        props: {entry},
    }));
}

const {entry} = Astro.props;
const {Content} = await entry.render();
const imageSrc = projectImages[entry.slug];
const typeLabel = entry.data.type === "professional" ? "Professional" : "Hobbyist";
const typeClass = entry.data.type === "professional" ? "bg-green-600" : "bg-blue-600";
---

<ProjectLayout>
    <section class="section">
        <div class="content-container">
            <a class="hover:text-secondary underline text-lg pr-2" href="/"> Home</a>
            {">"}
            <a class="hover:text-secondary underline text-lg pl-2" href="/project/"
            >Projects
            </a>
            <div class="flex items-center gap-4 mt-2">
                <h2 class="text-6xl font-bold">{entry.data.title}</h2>
                <span class={`${typeClass} rounded-xl px-3 py-1 text-sm text-white`}>
                    {typeLabel}
                </span>
            </div>
            <ProjectSkillList skills={entry.data.skills}/>
            <div class="content">
                <Image src={imageSrc} alt={entry.data.img_alt}/>
                <Content/>
            </div>
        </div>
    </section>
</ProjectLayout>
