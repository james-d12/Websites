---
import '../styles/global.css'

export interface Props {
    title?: string;
}

const {title} = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
<head>
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon.png"/>
    <link rel="sitemap" href="/sitemap-index.xml"/>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <meta name="description"
          content="Black Cat Tattoo & Piercing Parlour offers custom tattoos and piercings in styles from traditional and tribal to geometric and realism."/>
    <meta property="og:title" content="Black Cat Tattoo & Piercing Parlour"/>
    <meta property="og:description" content="Black Cat Tattoo & Piercing Parlour Shop"/>
    <meta property="og:image" content="https://blackcattattoos.co.uk/Logo.png"/>
    <meta property="og:url" content="https://blackcattattoos.co.uk/"/>

    <meta name="twitter:title" content="Black Cat Tattoo & Piercing Parlour"/>
    <meta name="twitter:description" content="Black Cat Tattoo & Piercing Parlour Shop"/>
    <meta name="twitter:url" content="https://blackcattattoos.co.uk/logo.png"/>
    <meta name="twitter:card" content="summary"/>
</head>
<body>
<slot/>
</body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: #0a0a0a;
    }
</style>
