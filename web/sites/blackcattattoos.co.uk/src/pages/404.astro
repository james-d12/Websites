---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
---

<Layout title="Page Not Found | Black Cat Tattoo & Piercing Parlour">
    <Navbar/>

    <section class="pt-36 pb-20 px-6 md:px-12 lg:px-20 text-white min-h-screen flex flex-col items-center justify-center">
        <h1 class="text-8xl lg:text-[12rem] font-bold text-center mb-4 text-red">404</h1>
        <h2 class="text-3xl lg:text-5xl font-semibold text-center mb-6 text-white">Page Not Found</h2>
        <p class="text-lg lg:text-xl text-center text-gray-300 max-w-xl mb-10">
            Sorry, we couldn't find the page you're looking for. It may have been moved or doesn't exist.
        </p>
        <Button text="Back to Home" href="/"/>
    </section>

    <Footer/>
</Layout>
