---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import {GalleryGrid} from "../components/GalleryGrid.tsx";
---
<Layout>
    <Navbar/>
    <section class="pt-24 pb-20 px-6 md:px-12 lg:px-20 text-white">
        <h1 class="text-7xl font-semibold text-center mb-8">Gallery</h1>
        <GalleryGrid client:only="solid-js" slides={[
            {
                image: "https://placehold.co/600x400",
                text: "Slide 1"
            },
            {
                image: "https://placehold.co/800x200",
                text: "Slide 1"
            },
            {
                image: "https://placehold.co/300x200",
                text: "Slide 1"
            },
            {
                image: "https://placehold.co/600x800",
                text: "Slide 1"
            },
            {
                image: "https://placehold.co/300x200",
                text: "Slide 1"
            },
        ]}/>
    </section>
</Layout>