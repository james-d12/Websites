---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Button from "../components/Button.astro";
---

<Layout title="Contact Us | Black Cat Tattoo & Piercing Parlour">
    <Navbar/>

    <section class="bg-neutral-950 text-white pt-36 pb-48 px-6 md:px-12 lg:px-20">
        <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            <div class="space-y-8 text-center lg:text-left">
                <h1 class="text-7xl lg:text-7xl font-extrabold">
                    Get In Touch
                </h1>

                <p class="text-xl lg:text-2xl text-gray-300 max-w-lg mx-auto lg:mx-0">
                    Have a question, or want to book a session? We’d love to hear from you.
                </p>

                <div class="space-x-4">
                    <Button text="Call The Shop" href="tel:02036454508"/>
                    <a
                        href="https://wa.me/447980784863"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="mt-10 inline-flex items-center gap-2 bg-[#25D366] text-white font-bold px-8 py-4 text-xl md:px-10 md:py-5 md:text-3xl rounded-full shadow-2xl hover:bg-[#1da851] transition"
                    >
                        <svg class="w-6 h-6 md:w-8 md:h-8" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                        </svg>
                        WhatsApp
                    </a>
                </div>
            </div>

            <div class="space-y-6">
                <div class="rounded-2xl overflow-hidden shadow-lg h-72 lg:h-80">
                    <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3725.4698544169833!2d-0.37949519497790096!3d51.44984148223648!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4876734a60cfe82f%3A0x953d30ee4c12fc3e!2s668a%20Hanworth%20Rd%2C%20Hounslow%20TW4%205NP!5e0!3m2!1sen!2suk!4v1761862040687!5m2!1sen!2suk"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"
                            class="w-full h-full"
                    ></iframe>
                </div>

                <div class="text-center lg:text-left text-gray-300 space-y-2">
                    <p class="text-2xl font-bold text-white pb-4">668a Hanworth Rd, Hounslow TW4 5NP, UK</p>
                    <p class="text-lg text-white">Tuesday – Saturday: 11:00am – 6:00pm (Doors Open)</p>
                    <p class="text-lg text-white"> Monday & Sunday Pre-Arranged Appointments Only (Doors Closed)</p>
                </div>
            </div>
        </div>
    </section>

    <Footer/>
</Layout>
