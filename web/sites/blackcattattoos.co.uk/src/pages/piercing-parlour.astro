---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import {getPiercingImages} from "../utils/image.ts";
import {GalleryGrid} from "../components/solid-js/GalleryGrid.tsx";
import ContactUs from "../components/ContactUs.astro";

const slides = await getPiercingImages();
---
<Layout title="Piercing Parlour | Black Cat Tattoo & <Pierci></Pierci>ng Parlour">
    <Navbar/>

    <section class="pt-36 pb-20 px-6 md:px-12 lg:px-20 text-white md:max-w-10/12 mx-auto">
        <h1 class="text-7xl lg:text-9xl font-semibold text-center mb-8 text-white">Piercing Parlour</h1>

        <div class="text-center max-w-3xl mx-auto space-y-6 mb-12">
            <p class="text-xl md:text-2xl text-gray-300 leading-relaxed">
                Professional body piercing services in a clean, safe, and welcoming environment.
            </p>
            <p class="text-lg md:text-xl text-gray-400 leading-relaxed">
                Our experienced piercers use only the highest quality materials and maintain strict hygiene standards. Whether it's your first piercing or you're adding to your collection, we're here to make your experience comfortable and safe.
            </p>
        </div>

        <GalleryGrid client:only="solid-js" slides={slides}/>
    </section>

    <ContactUs/>

    <Footer/>
</Layout>