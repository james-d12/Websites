---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import {GalleryGrid} from "../components/solid-js/GalleryGrid.tsx";
import Button from "../components/Button.astro";
import {getPiercingsAsync} from "../utils/cms.ts";

const slides = await getPiercingsAsync();
---
<Layout title="Piercing Parlour | Black Cat Tattoo & <Pierci></Pierci>ng Parlour">
    <Navbar/>

    <section class="pt-36 pb-20 px-6 md:px-12 lg:px-20 text-white md:max-w-10/12 mx-auto">
        <h1 class="text-7xl lg:text-9xl font-semibold text-center mb-8 text-white">Piercing Parlour</h1>

        <div class="text-center max-w-6xl mx-auto space-y-6 mb-12">
            <p class="text-2xl md:text-3xl text-gray-400 leading-relaxed">
                Professional body piercing services in a clean, safe, and welcoming environment.
            </p>
        </div>

        <GalleryGrid client:only="solid-js" slides={slides}/>

        <div class="p-10 items-center justify-center text-center">
            <Button text="Contact Us!" href="/contact-us"/>
        </div>
    </section>

    <Footer/>
</Layout>