---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Button from "../components/Button.astro";
import {getPiercingImages} from "../utils/Images.ts";
import {GalleryGrid} from "../components/solid-js/GalleryGrid.tsx";

const slides = await getPiercingImages();
---
<Layout title="Piercing Parlour | Black Cat Tattoo & <Pierci></Pierci>ng Parlour">
    <Navbar/>

    <section class="pt-36 pb-20 px-6 md:px-12 lg:px-20 text-white max-w-10/12 mx-auto">
        <h1 class="text-7xl lg:text-9xl font-semibold text-center mb-16">Piercing Parlour</h1>

        <div>
            <h2 class="text-7xl font-semibold text-center mb-16">Gallery</h2>
            <GalleryGrid client:only="solid-js" slides={slides}/>
        </div>

        <div class="p-10 items-center justify-center text-center">
            <Button text="Contact Us!" href="/contact-us"/>
        </div>
    </section>


    <Footer/>
</Layout>