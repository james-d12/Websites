---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const filters = ["All", "T-shirts", "Hats", "Accessories"];
const products = [
    {
        name: "Black Cat Tee",
        image: "https://review.boldfocus.com/wp-content/plugins/elementor/assets/images/placeholder.png",
        price: "25"
    },
    {
        name: "Tattoo Snapback",
        image: "https://review.boldfocus.com/wp-content/plugins/elementor/assets/images/placeholder.png",
        price: "30"
    },
    {
        name: "Ink Mug",
        image: "https://review.boldfocus.com/wp-content/plugins/elementor/assets/images/placeholder.png",
        price: "15"
    },
    {
        name: "Sticker Pack",
        image: "https://review.boldfocus.com/wp-content/plugins/elementor/assets/images/placeholder.png",
        price: "8"
    },
    {
        name: "Tattoo Hoodie",
        image: "https://review.boldfocus.com/wp-content/plugins/elementor/assets/images/placeholder.png",
        price: "50"
    },
    {
        name: "Cap",
        image: "https://review.boldfocus.com/wp-content/plugins/elementor/assets/images/placeholder.png",
        price: "20"
    },
];
---

<Layout>
    <Navbar/>

    <section class="pt-24 pb-20 px-6 md:px-12 lg:px-20 text-white max-w-6xl mx-auto">
        <h1 class="text-7xl font-semibold text-center mb-8">Shop</h1>

        <div class="flex flex-wrap justify-center gap-4 mb-8">
            {filters.map((filter) => (
                    <button class="bg-white text-black py-2 px-4 rounded-full hover:text-white hover:bg-red transition-colors">
                        {filter}
                    </button>
            ))}
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {products.map((product) => (
                    <div class="bg-black rounded-lg shadow-md overflow-hidden flex flex-col">
                        <img src={product.image} alt={product.name} class="w-full h-64 object-cover"/>
                        <div class="p-4 flex flex-col flex-1 gap-2 bg-neutral-900">
                            <h2 class="text-2xl">{product.name}</h2>
                            <p class="text-xl">Â£{product.price}</p>
                            <button class="mt-auto bg-red text-white py-2 px-4 rounded-lg hover:text-white hover:bg-red-950 transition-colors">
                                Add to Cart
                            </button>
                        </div>
                    </div>
            ))}
        </div>
    </section>

    <Footer/>
</Layout>
